<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the constraints for entity Settlement.
    -->
    <changeSet id="20260103093456-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="settlement"
                                 constraintName="fk_settlement__event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"
                                 />

        <addForeignKeyConstraint baseColumnNames="from_member_id"
                                 baseTableName="settlement"
                                 constraintName="fk_settlement__from_member_id"
                                 referencedColumnNames="id"
                                 referencedTableName="member"
                                 />

        <addForeignKeyConstraint baseColumnNames="to_member_id"
                                 baseTableName="settlement"
                                 constraintName="fk_settlement__to_member_id"
                                 referencedColumnNames="id"
                                 referencedTableName="member"
                                 />
    </changeSet>
</databaseChangeLog>
